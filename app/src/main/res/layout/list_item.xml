<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/listNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la Lista"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 productos"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/userImageView1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_user_placeholder" />

        <ImageView
            android:id="@+id/userImageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_user_placeholder" />

        <ImageView
            android:id="@+id/userImageView3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_user_placeholder" />

        <!-- Add more ImageViews if needed -->

        <ImageView
            android:id="@+id/addUserImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add_user"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>